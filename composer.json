{
    "name": "oyova/wp-support",
    "description": "General support functionality for Oyova WordPress projects.",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Oyova\\WpSupport\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.0.2"
    },
    "require-dev": {
        "filp/whoops": "^2.14",
        "illuminate/database": "^9.40",
        "oyova/php-cs-fixer": "^1.2",
        "phpunit/phpunit": "^9.5",
        "symfony/var-dumper": "^6.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "suggest": {
        "filp/whoops": "Required for error handling.",
        "illuminate/database": "Required for Eloquent usage."
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
